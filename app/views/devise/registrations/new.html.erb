<div class="wrapper">
  <div class="container">
      <h2 class="new-user">新規会員登録</h2>
      <p class="text">アニレビュは、280文字以上の感想と評価で探せるレビューサイトです。
      一緒にオススメのアニメを探しませんか？</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


      <div class="name">
        <div class="name-box">
          <%= f.label :名前 , class:"name-label" %>
          <span class="need required"> 必須</span>
          <span class="add">※12文字以内</span>
        </div>
        <%= f.text_field :name, class:"name-field", autofocus: true, maxlength: "12" %>
      </div>

      <div class="mail">
        <div class="mail-box">
          <%= f.label :メールアドレス %>
          <span class="need required">必須</span>
          <p class="add">※半角英数字</p>
        </div>
        <%= f.email_field :email, class:"mail-field", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="pass">
        <div class="pass-box">
          <%= f.label :パスワード %>
          <p class="need required">必須</p>
          <p class="add">※8文字以上の半角英数字</p>
        </div>
        <%= f.password_field :password, class:"pass-field", autocomplete: "new-password" %>
      </div>

      <div class="pass1 ">
        <div class="pass1-box">
          <%= f.label :"パスワード(再確認)" %><br />
          <p class="need required">必須</p>
          <p class="add">※8文字以上の半角英数字</p>
        </div>
        <%= f.password_field :password_confirmation, class:"pass1-field", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する",class:"submit" %>
      </div>
    <% end %>
  </div>
</div>